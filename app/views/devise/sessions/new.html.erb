<section id="forms">
  <div class="page-header">
    <h1>登录</h1>
  </div>
  <div class="row">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <fieldset>
      <div class="clearfix">
        <label for="text_field">用户名 或 邮箱</label>
        <div class="input">
          <%= f.text_field :login %>
        </div>
      </div>
      <div class="clearfix">
        <label for="text_field">密码</label>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <span>下次自动登录</span>
          <% end -%>
        </div>
      </div>
      <div class="actions blank">
        <%= f.submit '登录', :class => "btn primary" %>
        <%= link_to "忘记密码了？", new_password_path(resource_name) %>
      </div>
    </fieldset>
    <% end %>
  </div>
</section>